{
  "name": "koacat",
  "version": "0.0.7",
  "description": "A Bloat-free Warpper of Koa & Vue-SSR & MongoDB",
  "author": "SamNofee",
  "type": "module",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    },
    "./lib/utils/moment": {
      "import": "./lib/utils/moment.js",
      "require": "./lib/utils/moment.cjs"
    },
    "./lib/utils/chance": {
      "import": "./lib/utils/chance.js",
      "require": "./lib/utils/chance.cjs"
    }
  },
  "main": "./lib/index.js",
  "homepage": "https://github.com/SamNofee/koacat",
  "repository": {
    "type": "git",
    "url": "https://github.com/SamNofee/koacat.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "npx rollup -c",
    "tsc": "npx tsc --outDir dist -p tsconfig.json",
    "lint": "npx eslint . --ext .ts",
    "c8": "npx c8 --check-coverage npm run test",
    "test": "NODE_OPTIONS=\"--loader ts-node/esm --experimental-specifier-resolution=node\" npx mocha --config .mocharc.json \"src/**/*.test.ts\" --",
    "test:grep": "npm run test -- --grep",
    "install:hook": "npx husky install"
  },
  "engines": {
    "node": ">=16.13"
  },
  "dependencies": {
    "@css-render/vue3-ssr": "^0.15.11",
    "@typegoose/typegoose": "^9.12.1",
    "@vitejs/plugin-vue": "^3.1.2",
    "ajv": "^8.12.0",
    "chance": "^1.1.8",
    "commander": "^10.0.0",
    "execa": "^6.1.0",
    "husky": "^8.0.3",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-connect": "^2.1.0",
    "koa-router": "^12.0.0",
    "koa-send": "^5.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^6.6.5",
    "vite": "^3.1.8",
    "vue": "^3.2.40",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/koa": "^2.13.5",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.194",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "c8": "^7.13.0",
    "eslint": "^8.32.0",
    "glob": "^10.2.5",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.20",
    "power-assert": "^1.6.1",
    "rollup": "^3.22.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        50
      ],
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "refactor"
        ]
      ],
      "type-case": [
        2,
        "always",
        "lowerCase"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "c8": {
    "src": [
      "src"
    ],
    "report-dir": "coverage",
    "reporter": [
      "html",
      "text"
    ]
  }
}
